
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minWidth="25px"
    android:minHeight="25px"
    android:background="@drawable/gradientimage">

    <ImageView
        android:id="@+id/pic_id"
        android:layout_width="550dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_blanquita3"
        android:layout_marginTop="25.0dp"
        android:layout_marginBottom="2.0dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:layout_marginTop="0.5dp">
        <TextView
            android:id="@+id/textViewNombreProductos"
            android:text="NOMBRE DEL PRODUCTO"
            android:textAppearance="?android:attr/textAppearanceSmall"
           	android:textColor="#000000"
            android:textSize="50dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginTop="60.5dp"
            android:layout_marginBottom="7.5dp" />



    </LinearLayout>

      <TextView
        android:id="@+id/textViewMedida"
        android:text="MEDIDA"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="113.5dp"
        android:layout_marginTop="0.0dp" />

    <TextView
        android:id="@+id/textViewPrecio"
        android:text="PRECIO"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:textSize="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="31.0dp"
        android:layout_marginTop="0.0dp" />

</RelativeLayout>