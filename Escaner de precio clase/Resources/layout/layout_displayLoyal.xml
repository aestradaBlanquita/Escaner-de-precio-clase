
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minWidth="25px"
    android:minHeight="25px"
    android:background="@drawable/gradientimage">

    <TextView
        android:id="@+id/texviewID"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:text="LoyaltyId:"
        android:textSize="25dp"
        android:textColor="#000000"
        android:layout_alignParentEnd="true"
        android:gravity="right"
        android:layout_marginLeft="0.0dp"
        android:layout_marginRight="1.0dp" />

    <ImageView
        android:id="@+id/pic_id"
        android:layout_width="550dp"
        android:layout_height="400dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_blanquita3"
        android:layout_marginTop="25.0dp"
        android:layout_marginBottom="2.0dp" />

    <TextView
        android:id="@+id/textViewPuntosLabel"
        android:text="PUNTOS DISPONIBLES"
        android:textSize="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="0.0dp"
        android:layout_marginBottom="7.5dp" />

    <TextView
        android:id="@+id/textViewPuntos"
        android:text="NUMERO DE PUNTOS"
        android:textSize="50dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="125.0dp"
        android:layout_marginTop="0.0dp" />

</RelativeLayout>